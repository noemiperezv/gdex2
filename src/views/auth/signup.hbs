<h4>{{> header}}</h4>

<hr>

<div class="Container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            {{# if errores}}
                {{# each validaciones}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>{{msg}}</strong> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                    
                {{/ each}}
                    
                </div>
            {{/ if}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="centrado separado">
                <img src="/static/img/logo.png" style="width:auto; height:90px;" alt="Imagen no disponible">
            </div>
            <form action="/signup" method="POST" class="border-black">
                <div class="form-group ">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" aria-describedby="nameHelp" placeholder="Ingrese su nombre" 
                    value="{{# if errores}}{{valores.nombre}}{{/ if}}">
                </div>
                <div class="form-group">
                    <label for="apellidos">Apellidos</label>
                    <input type="text" class="form-control" name="apellidos" id="apellidos" aria-describedby="lastNameHelp" placeholder="Ingrese sus apellidos" 
                    value="{{# if errores}}{{valores.apellidos}}{{/ if}}">
                </div>
                <div class="form-group">
                    <label for="matricula">Matrícula</label>
                    <input type="text" class="form-control" name="matricula" id="matricula" aria-describedby="lastNameHelp" placeholder="Ingrese su matrícula" 
                    value="{{# if errores}}{{valores.matricula}}{{/ if}}">
                </div>
                <div class="form-group">
                    <label for="correo">Correo electrónico</label>
                    <input type="email" class="form-control" name="correo" id="correo" aria-describedby="emailHelp" placeholder="Ingrese su correo electrónico" 
                    value="{{# if errores}}{{valores.correo}}{{/ if}}">
                </div>
                <div class="form-group">
                    <label for="rol">Rol</label >
                    <select class="form-control" name="rol" id="rol"
                    value="{{# if errores}}{{valores.rol}}{{/ if}}">
                        <option value="">Seleccionar</option>
                        <option value="1">Instructor</option>
                        <option value="2">Estudiante</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="contraseña">Contraseña</label>
                    <input type="password" class="form-control" name="contraseña" id="contraseña" placeholder="Contraseña" 
                    value="{{# if errores}}{{valores.contraseña}}{{/ if}}">
                </div>
                <div class="form-group">
                    <label for="contraseña2">Confirmar contraseña</label>
                    <input type="password" class="form-control" name="contraseña2" id="contraseñacontraseña2" placeholder="Contraseña" 
                    value="{{# if errores}}{{valores.contraseña2}}{{/ if}}">
                </div>
                <div class="row">
                    <div class="col-md-6" align="left">
                        <a href="/login" class="">¿Ya tienes cuenta?</a>
                    </div>
                    <div class="col-md-6" align="right">
                        <button type="submit" class="btn btn-azul btn-block">Registrarse</button>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

<link href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

{{#if correo}}
    <script>
        Swal.fire({
            title: 'Registro de usuario',
            text: 'El correo que ingreso ya se encuentra registrado, intente con otro.',
            icon: 'warning',
            showConfirmButton: 'true'
        }).then(()=>{
            window.location= '/signup'
        })
    </script>
{{/ if}}

{{#if alert}}
    <script>
        Swal.fire({
            title: 'Registro de usuario',
            text: 'El usuario fue registrado de manera exitosa!!',
            icon: 'success',
            showConfirmButton: 'false',
            timer: '2000'
        }).then(()=>{
            window.location= '/index'
        })
    </script>
{{/ if}}

{{> scripts}}