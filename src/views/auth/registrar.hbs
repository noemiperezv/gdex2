<script src="https://cdn.tailwindcss.com"></script>

<div style="display: flex; justify-content: center; padding-top: 40px;">
    <img src="/static/img/logo.png" style="width:auto; height:90px;" alt="Imagen no disponible">
</div>
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800"
    id="Datos">
    <h1 class="text-3xl  font-bold text-center">Register</h1>
    <form action="/registrar" method="POST" class="mt-4">

        <input type="text" name="name" placeholder="Nombre" {{#if valores}} value='{{valores.name}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>
        <input type="text" name="lastname" placeholder="Apellidos" {{#if valores}} value='{{valores.lastname}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>
        <input type="number" name="matricula" placeholder="Matricula" {{#if valores}} value='{{valores.matricula}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="email" name="email" placeholder="Email" {{#if valores}} value='{{valores.email}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>




        <select style="color: grey;"
            class="form-control border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            name="rol" id="rol"  required>
            <option value="" >Seleccionar Rol</option>
            <option value="1" {{#ifeq valores.rol '1'}}selected {{/ifeq}}>Instructor</option>
            <option value="2" {{#ifeq valores.rol '2'}}selected {{/ifeq}}>Estudiante</option>
        </select>


        <input type="password" name="password" placeholder="Contraseña" {{#if valores}} value='{{valores.password}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="password" name="confirmarpassword" placeholder="Confirmar contraseña" {{#if valores}} value='{{valores.confirmarpassword}}' {{/if}}
            class="border border-gray-200 w-full text-lg placeholder-gray-250 p-2 my-2 bg-gray-200 focus:bg-white"
            required>
        <!-- Se cambio el siguente boton -->


        <button onmouseover="pintar('#0f0')" onmouseout="pintar('#FFFFFF')" type="submit" id="btnForm"
            class="rounded-md bg-blue-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Registrar</button>
        <div style="display: flex; justify-content: space-between;">


            <a href="/" style="color: blue;" class="">¿Ya tienes una cuenta?</a>
        </div>
        {{#if validaciones }}
        {{#each validaciones}}
        
        <p class="text-red-500 font-bold text-lg my-3">{{ this.msg }}</p>
        {{/each}}
        {{/if}}
        {{#if error}}
        <p class="text-red-500 font-bold text-lg my-3">{{error}}</p>
        {{/if}}

    </form>
</div>
