<h4>{{> header dato="Aprendiendo"}}</h4>

<hr>




<div class="card-columns">
  {{#each aprendiendo}}
  <div class="card">
    <img class="card-img-top" src="/static/img/logo.png" style="width:auto; height:150px;" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><p>{{nombre}}</p></h5>    

        {{#if avanceCurso }}
        <div class="progress">
        <div class="progress-bar progress-bar-striped bg-info progress-bar-animated" role="progressbar" style="width: {{avanceCurso}}%" aria-valuenow="{{avanceCurso}}" aria-valuemin="0" aria-valuemax="100">{{avanceCurso}}%</div>
        </div>
        {{else}}
        <div class="progress">
        <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 0" aria-valuenow="0" aria-valuemin="0" aria-valuemax="0">0%</div>
        </div>
        {{/if}}

        <br>
        
      <details>
        <summary>Más información</summary>
        <p>{{descripcion}}</p>
      </details>

      <br>
      <br>

      <p class="card-text" style="float: left;">
        <i class="icon-calendar"></i>&nbsp;&nbsp;{{fecha}}
      </p>
      <p class="card-text" style="float: right;">
        <i class="icon-user"></i>&nbsp;&nbsp;{{nombreCompleto}}
      </p> 
    </div>
  </div>
  {{/each}}
  
</div>




{{> scripts}}